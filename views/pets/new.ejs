<%- include('../partials/header') %>
<h2>New Pet</h2>
<!-- Form for submitting a POST request to /pets to add a new pet -->
<form action="/pets" method="POST">
<input type="text" name="name" placeholder="Pet Name"><br>
<input type="text" name="type" placeholder="Pet Type"><br>
<input type="number" name="age" placeholder="Pet Age"><br>
<button type="submit">Add Pet 🎠</button>
</form>
